<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.zzzclcik.taxisfirebase.Main2Activity"
    android:background="@drawable/logo_dos">

    <Button
        android:text="Rechazar"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/buttonUnoRechazar"
        android:layout_below="@+id/scrollView1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/boton_redondo2"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textStyle="normal|bold"
        android:drawableLeft="@drawable/botoncancel"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/scrollView2"
        android:layout_below="@+id/buttonUnoRechazar"
        android:background="@drawable/border_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    <TextView
        android:text="Petición 2"
        android:layout_width="match_parent"
        android:layout_height="20dp"

        android:id="@+id/textViewDos"
        android:textAlignment="center"
        android:layout_below="@+id/buttonUnoRechazar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="normal|bold" />
    </ScrollView>

    <Button
        android:text="Aceptar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonUnoAceptar"

        android:layout_below="@+id/scrollView1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/scrollView2"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:background="@drawable/boton_redondo"
        android:textStyle="normal|bold"
        android:drawableLeft="@drawable/listo"/>

    <Button
        android:text="Aceptar"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/buttonDosAceptar"

        android:layout_below="@+id/scrollView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:background="@drawable/boton_redondo"
        android:textStyle="normal|bold"
        android:drawableLeft="@drawable/listo"/>

    <Button
        android:text="Rechazar"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/buttonDosRechazar"
        android:background="@drawable/boton_redondo2"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textStyle="normal|bold"
        android:layout_below="@+id/scrollView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:drawableLeft="@drawable/botoncancel"/>

    <Button
        android:text="Aceptar"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/buttonTresAceptar"

        android:layout_below="@+id/scrollView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:background="@drawable/boton_redondo"
        android:textStyle="normal|bold"
        android:drawableLeft="@drawable/listo"/>

    <Button
        android:text="Rechazar"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/buttonTresRechazar"
        android:background="@drawable/boton_redondo2"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textStyle="normal|bold"
        android:layout_below="@+id/scrollView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:drawableLeft="@drawable/botoncancel"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/scrollView4"
        android:layout_below="@+id/buttonTresAceptar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/border_text">
    <TextView
        android:text="Petición 4"
        android:layout_width="match_parent"
        android:layout_height="20dp"

        android:id="@+id/textViewCuatro"
        android:textAlignment="center"
        android:textStyle="normal|bold" />
    </ScrollView>

    <Button
        android:text="Rechazar"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/buttonCuatroRechazar"
        android:layout_below="@+id/scrollView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/boton_redondo2"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textStyle="normal|bold"
        android:drawableLeft="@drawable/botoncancel"/>

    <Button
        android:text="Aceptar"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/buttonCuatroAceptar"

        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:background="@drawable/boton_redondo"
        android:textStyle="normal|bold"
        android:layout_below="@+id/scrollView4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:drawableLeft="@drawable/listo"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:id="@+id/scrollView5"
        android:layout_below="@+id/buttonCuatroRechazar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/border_text">
    <TextView
        android:text="Petición 5"
        android:layout_width="match_parent"
        android:layout_height="28dp"

        android:id="@+id/textViewCinco"
        android:textAlignment="center"
        android:layout_below="@+id/buttonCuatroRechazar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="normal|bold" />
    </ScrollView>


    <Button
        android:text="Aceptar"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/buttonCincoAceptar"

        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/scrollView5"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:background="@drawable/boton_redondo"
        android:textStyle="normal|bold"
        android:drawableLeft="@drawable/listo"/>

    <Button
        android:text="Rechazar"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/buttonCincoRechazar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/scrollView5"
        android:layout_alignBottom="@+id/buttonCincoAceptar"
        android:background="@drawable/boton_redondo2"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textStyle="normal|bold"
        android:drawableLeft="@drawable/botoncancel"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/scrollView1"
        android:background="@drawable/border_text"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    <TextView
        android:text="Petición 1"
        android:layout_width="match_parent"
        android:layout_height="20dp"

        android:id="@+id/textViewUno"
        android:textAlignment="center"
        android:textStyle="normal|bold" />
    </ScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/scrollView3"
        android:layout_below="@+id/buttonDosAceptar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/border_text">
    <TextView
        android:text="Petición 3"
        android:layout_width="match_parent"
        android:layout_height="20dp"

        android:id="@+id/textViewTres"
        android:textAlignment="center"
        android:textStyle="normal|bold" />
    </ScrollView>
</RelativeLayout>
