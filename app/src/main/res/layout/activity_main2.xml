<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.zzzclcik.taxisfirebase.Main2Activity"
    android:background="@drawable/logo">

    <Button
        android:id="@+id/buttonUnoRechazar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/scrollView1"
        android:drawableLeft="@drawable/botoncancel"
        android:background="@drawable/boton_redondo2"
        android:text="Rechazar "
        android:textColor="@color/common_google_signin_btn_text_dark_default" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/scrollView2"
        android:scrollbars="vertical"
        android:fillViewport="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/buttonUnoRechazar"
        android:background="@drawable/border_text">

        <TextView
            android:id="@+id/textViewDos"
            android:layout_width="match_parent"
            android:layout_height="48dp"

            android:text="Sin Petición"
            android:textAlignment="center" />
    </ScrollView>

    <Button
        android:id="@+id/buttonUnoAceptar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/scrollView2"

        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/scrollView1"
        android:background="@drawable/boton_redondo"
        android:text="Aceptar"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:drawableLeft="@drawable/listo"
        android:layout_toRightOf="@+id/SinPeticiones_textView"
        android:layout_toEndOf="@+id/SinPeticiones_textView" />

    <Button
        android:id="@+id/buttonDosAceptar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@drawable/boton_redondo"
        android:text="Aceptar"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:layout_below="@+id/scrollView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:drawableLeft="@drawable/listo"
        android:layout_alignLeft="@+id/buttonUnoAceptar"
        android:layout_alignStart="@+id/buttonUnoAceptar" />

    <Button
        android:id="@+id/buttonDosRechazar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/boton_redondo2"
        android:text="Rechazar"
        android:drawableLeft="@drawable/botoncancel"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:layout_below="@+id/scrollView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/buttonUnoRechazar"
        android:layout_alignEnd="@+id/buttonUnoRechazar" />

    <Button
        android:id="@+id/buttonTresAceptar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@drawable/boton_redondo"
        android:text="Aceptar"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:layout_below="@+id/scrollView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:drawableLeft="@drawable/listo"
        android:layout_alignLeft="@+id/buttonDosAceptar"
        android:layout_alignStart="@+id/buttonDosAceptar" />

    <Button
        android:id="@+id/buttonTresRechazar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/scrollView3"
        android:background="@drawable/boton_redondo2"
        android:text="Rechazar"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:drawableLeft="@drawable/botoncancel"
        android:layout_alignRight="@+id/buttonDosRechazar"
        android:layout_alignEnd="@+id/buttonDosRechazar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/scrollView4"
        android:scrollbars="vertical"
        android:fillViewport="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/buttonTresAceptar"
        android:background="@drawable/border_text">

        <TextView
            android:id="@+id/textViewCuatro"
            android:layout_width="match_parent"
            android:layout_height="48dp"

            android:text="Sin Petición"
            android:textAlignment="center" />
    </ScrollView>

    <Button
        android:id="@+id/buttonCuatroRechazar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/scrollView4"
        android:background="@drawable/boton_redondo2"
        android:text="Rechazar"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:drawableLeft="@drawable/botoncancel"
        android:layout_toLeftOf="@+id/SinPeticiones_textView"
        android:layout_toStartOf="@+id/SinPeticiones_textView" />

    <Button
        android:id="@+id/buttonCuatroAceptar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"

        android:layout_alignParentRight="true"
        android:layout_below="@+id/scrollView4"
        android:background="@drawable/boton_redondo"
        android:text="Aceptar"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:drawableLeft="@drawable/listo"
        android:layout_alignLeft="@+id/buttonTresAceptar"
        android:layout_alignStart="@+id/buttonTresAceptar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/scrollView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scrollbars="vertical"
        android:fillViewport="true"
        android:layout_below="@+id/buttonCuatroRechazar"
        android:background="@drawable/border_text">

        <TextView
            android:id="@+id/textViewCinco"
            android:layout_width="match_parent"
            android:layout_height="48dp"

            android:text="Sin Petición"
            android:textAlignment="center" />
    </ScrollView>

    <Button
        android:id="@+id/buttonCincoAceptar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/boton_redondo"
        android:text="Aceptar"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:drawableLeft="@drawable/listo"
        android:layout_alignLeft="@+id/buttonCuatroAceptar"
        android:layout_alignStart="@+id/buttonCuatroAceptar" />

    <Button
        android:id="@+id/buttonCincoRechazar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/scrollView5"
        android:background="@drawable/boton_redondo2"
        android:text="Rechazar"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:drawableLeft="@drawable/botoncancel"
        android:layout_alignRight="@+id/buttonCuatroRechazar"
        android:layout_alignEnd="@+id/buttonCuatroRechazar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/scrollView1"
        android:scrollbars="vertical"
        android:fillViewport="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/border_text">

        <TextView
            android:id="@+id/textViewUno"
            android:layout_width="match_parent"
            android:layout_height="48dp"

            android:text="Sin Petición"
            android:textAlignment="center"
            android:textAllCaps="false" />
    </ScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/scrollView3"
        android:scrollbars="vertical"
        android:fillViewport="true"
        android:background="@drawable/border_text"
        android:layout_below="@+id/buttonDosAceptar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/textViewTres"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Sin Petición"
            android:textAlignment="center" />
    </ScrollView>

    <TextView
        android:id="@+id/SinPeticiones_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sin peticiones"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@+id/scrollView1"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
